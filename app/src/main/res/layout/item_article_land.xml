<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ivArticle"
        android:layout_height="@dimen/image_size_land"
        android:layout_width="@dimen/image_size_land"
        android:contentDescription="TODO: contentDescription"
        android:src="@drawable/ic_setting_light"
        android:layout_margin="@dimen/item_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/item_margin">

        <TextView
            android:id="@+id/tvArticleDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2015"
            android:visibility="gone"
            android:layout_margin="@dimen/item_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorBlackText"
            android:layout_gravity="end"
            />

        <TextView
            android:id="@+id/tvArticleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_margin"
            android:textColor="@color/colorBlackText"
            android:text="...Article Title......Article Title......Article Title......Article Title......Article Title......Article Title..."
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:id="@+id/tvTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Таг..., Таг..., Таг..., Таг..., Таг"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="start"
            android:layout_below="@+id/tvArticleTitle"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/item_margin" />

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id_ca_ba_in_case1234"
            android:visibility="invisible"
            android:layout_margin="@dimen/item_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="start"
            />

    </LinearLayout>


</LinearLayout>
